{
  "name": "daniels-react-boilerplate",
  "version": "1.0.0",
  "description": "A simple and clean boilerplate for Universal React apps.",
  "author": "Daniel Dunderfelt <daniel.dunderfelt@mirumagency.com>",
  "license": "MIT",
  "main": "./bin/server.js",
  "scripts": {
    "start": "PORT=3000 NODE_ENV=production node ./bin/server.js",
    "start:dev": "PORT=3000 NODE_ENV=development node ./bin/server.js",
    "build": "npm run build:js && npm run build:scss",
    "build:js": "browserify -t babelify src/client.js | uglifyjs -m -c --screw-ie8 > static/dist/bundle.js",
    "build:scss": "node-sass src/styles/main.scss --output-style=compressed | postcss -u autoprefixer > static/dist/main.css",
    "build:scss:dev": "node-sass src/styles/main.scss --source-map-embed --output-style=expanded | postcss -m -u autoprefixer > static/dist/main.css",
    "watch:js": "watchify -vd -p browserify-hmr -t [ babelify --presets react-hmre ] src/client.js -o static/dist/bundle.js",
    "watch:scss": "chokidar src/**/*.scss -c 'npm run build:scss:dev'",
    "clean": "rm -r static/dist/*",
    "browser-sync": "browser-sync start --proxy localhost:3000 --files='static/dist/*.css' --no-open --port 8080",
    "dev": "npm run clean && concurrently --kill-others 'npm run watch:scss' 'npm run watch:js' 'npm run start:dev' 'npm run browser-sync'"
  },
  "dependencies": {
    "autoprefixer": "6.3.3",
    "axios": "0.9.1",
    "babel-core": "6.6.0",
    "babel-eslint": "5.0.0",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-runtime": "6.6.0",
    "babel-polyfill": "6.6.1",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "^6.6.0",
    "babel-runtime": "6.6.1",
    "classnames": "2.2.3",
    "color": "0.11.1",
    "compression": "^1.6.1",
    "decorate-this": "0.5.0",
    "es6-promise": "3.1.2",
    "express": "^4.13.4",
    "history": "2.0.0",
    "lodash": "4.6.0",
    "lost": "6.7.2",
    "mobx": "2.0.0",
    "mobx-react": "3.0.0",
    "node-sass": "3.4.2",
    "nodemon": "1.9.1",
    "normalize.css": "3.0.3",
    "object-assign": "4.0.1",
    "postcss-cli": "^2.5.1",
    "pretty-error": "2.0.0",
    "query-string": "3.0.1",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-response": "^0.1.0",
    "react-response-router": "^0.1.0",
    "react-router": "2.0.0",
    "serialize-javascript": "1.2.0",
    "serve-favicon": "2.3.0",
    "serve-static": "^1.10.2",
    "uglify-js": "^2.6.2"
  },
  "devDependencies": {
    "babel-preset-react-hmre": "^1.1.0",
    "babelify": "7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "13.0.0",
    "browserify-hmr": "0.3.1",
    "concurrently": "2.0.0",
    "error-stack-parser": "1.3.3",
    "eslint": "2.2.0",
    "eslint-config-airbnb": "6.0.2",
    "eslint-plugin-react": "4.1.0",
    "node-sass": "^3.4.2",
    "piping": "0.3.0",
    "salita": "0.8.5",
    "watchify": "3.7.0"
  },
  "bin": {
    "daniels-react-boilerplate": "server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://danieldunderfelt@github.com/danieldunderfelt/Universal-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/danieldunderfelt/Universal-react-boilerplate/issues"
  },
  "homepage": "https://github.com/danieldunderfelt/Universal-react-boilerplate#readme"
}
